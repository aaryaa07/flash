{
  "name": "flash",
  "description": "Focus search boxes without using a mouse",
  "manifest_version": 2,
  "version": "0.1",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": ["input"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "input_components": [
    {
      "name": "Test IME",
      "type": "ime",
      "id": "test",
      "description": "Test IME",
      "language": "en-US",
      "layouts": ["us::eng"]
    }
  ]
}
